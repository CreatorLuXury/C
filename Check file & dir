# include <stdio.h>
# include <stdlib.h>
# include <dirent.h>

int checkdir(){
	char s[50];
	printf("Specify directory :\n");
	scanf("%s", &s);
	printf("%s\n", s);
	DIR *dir = opendir(s);
	if (dir){
		printf("log : dir founded!\n");
		closedir(dir);
		return 1;
	}
	else if(dir == NULL)
	{
		perror("log : dir not found\n");
		return 0;
	}
	else 
	{
		printf("unknown error\n");
	}
getchar();
system("cls");
}

int checkfile()
{
	char s[50];
	printf("Specify directory and file name :\n");
	scanf("%s", &s);
	printf("%s\n", s);
	FILE* ff;
	ff = fopen(s, "r");
	if (ff){
		printf("log : file founded!\n");
		fclose(ff);
		return 1;
	}
	else if (ff == NULL){
		perror("log: no files\n");
		return 0;
	}
}
int main(){
	printf ("control log dir  %d if 1 is ok\n", checkdir());
	printf ("control log file %d if 1 is ok\n", checkfile());
}
