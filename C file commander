/* Simple file Manager */
# include <stdio.h>
# include <stdlib.h>
# include <dirent.h>
# include <sys/types.h>
# include <errno.h>

int checkdir(){//check directory function
	char s[50];
	printf("Specify directory :\n");
	scanf("%s", &s);
	printf("%s\n", s);
	DIR *dir = opendir(s);
	if (dir){
		printf("log : dir founded!\n");
		closedir(dir);
		return 1;
	}
	else if(dir == NULL)
	{
		perror("log : dir not found\n");
		return 0;
	}
	else 
	{
		printf("unknown error\n");
	}
getchar();
system("cls");
}
int checkfile(){// check file exist function
	char s[50];
	printf("Specify directory and file name :\n");
	scanf("%s", &s);
	printf("%s\n", s);
	FILE* ff;
	ff = fopen(s, "r");
	if (ff){
		printf("log : file founded!\n");
		fclose(ff);
		return 1;
	}
	else if (ff == NULL){
		perror("log: no files\n");
		return 0;
	}
}
int remfile(){//remove file function
	printf("USE CAUTION  FILES WILL BE COMPLETLY REMOVED FROM DISK\n");
	char k;
	system("pause");
	printf(" ****** ARE YOU SURE TO USE THIS FUNCTION? CANNOT BE UNDONE ******\n\n (Y or N)\n");
	k = getch();
	if (k =='y'){
	char s[50];
	printf("Specify directory and file name: \n");
	scanf("%s", &s);
	printf("%s", s);
	if(s == NULL){
		prerror("\nlog: no file or directory\n");
		return 0;
	}
	else {
		remove(s);
		printf("\nlog: succes\n");
		return 1;
		}
	}
	else{
		return 0;
	}
}
int list(){ // file view function
	FILE* ff;
	char s[50];
	struct dirent *entry;
	printf("Specify directory for list of files\n");
	scanf("%s", &s);
	DIR *dir = opendir(s);
	char fullname[1024];


	if (dir){
		    printf("\n\n******\n\n");
		    while ((entry = readdir(dir)) != NULL){
			strcpy(fullname,s);
			strcat(fullname,"\\");
			strcat(fullname,entry->d_name);
		    ff = fopen(fullname , "r");
		    if (ff != NULL){
		    	printf("%s\n", entry->d_name);
				fclose(ff);	
			}
			else if (ff == NULL) {
        	printf("%s(directory)\n",entry->d_name);
   			}
   		}
		printf("\n******\n");
		closedir(dir);
		return 1;
	}
	else if(dir == NULL)
	{
		perror("log : dir not found\n");
		return 0;
	}
	else 
	{
		printf("unknown error\n");
	}

	
}
